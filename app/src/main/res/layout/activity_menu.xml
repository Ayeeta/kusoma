<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.elijah.kusoma.MainActivity">


    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/bgMenu"
        android:layout_weight="1"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp" >
    <TextView
        android:id="@+id/pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pitch_txt"
        android:layout_gravity="center"
        android:drawableStart="@drawable/baseline_graphic_eq_black_18dp"
        android:textSize="@dimen/menu_txtSize"
        android:layout_marginStart="16dp"
        />

    <SeekBar
        android:id="@+id/pitch_seek_bar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:progress="50"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardUseCompatPadding="true"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/bgMenu"
        android:layout_weight="1"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableStart="@drawable/baseline_hearing_black_18dp"
        android:text="@string/speed_txt"
        android:textSize="@dimen/menu_txtSize"
        android:layout_marginStart="16dp"
       />

    <SeekBar
        android:id="@+id/speed_seek_bar"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:progress="50"/>
    </android.support.v7.widget.CardView>

</LinearLayout>